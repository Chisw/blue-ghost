{
  "manifest_version": 2,
  "name": "Blue Ghost",
  "version": "1.0.0",
  "description": "A chrome assistant",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "defalut_icon": "img/icon.png",
    "default_title": "Blue Ghost",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/content-script.js"
      ],
      "css": [],
      "run_at": "document_start"
    },
    {
      "matches": ["https://kyfw.12306.cn/*"],
      "js": [
        "js/lib/vue.min.js",
        "js/lib/element.min.js",
        "js/lib/luxon.min.js",
        "js/12306.js"
      ],
      "css": [
        "css/element.min.css",
        "css/12306.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [],
  "homepage_url": "https://jisuowei.com",
  "chrome_url_overrides": {
    "newtab": "html/newtab.html"
  },
  "omnibox": {
    "keyword": "blue ghost"
  },
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval'; object-src 'self' ;",
  "default_locale": "zh_CN"
}